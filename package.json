{
  "name": "plague",
  "version": "1.0.0",
  "description": "Plaguecheats.cc",
  "main": "index.js",
  "author": "Seu Nome matheusbrianezzi@gmail.com",
  "homepage": "https://Plaguecheats.cc",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "plague"
  ],
  "devDependencies": {
    "electron": "^37.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.plague",
    "productName": "Plague",
    "copyright": "Copyright Â© 2025 ${author}",
    "directories": {
      "output": "release"
    },
    "files": [
      "**/*",
      "!node_modules/**/*.js",
      "!node_modules/electron-builder",
      "!node_modules/electron",
      "index.js",
      "index.html",
      "styles.css",
      "renderer/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "asar": true
  }
}
